<div class="wrapper">	
	<div class="container_12">
		<div id="admin_users" class="admin grid_12">
			<h1>Users</h1>
			<table>
				<thead>
					<tr>
						<td>ID</td>
						<td>Email</td>
						<td># Sign in</td>
						<td># Reviews</td>
						<td>FB id</td>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= user.id %></td>
							<td><%= user.email %></td>
							<td><%= user.sign_in_count %></td>
							<td><%= user.reviews.length %></td>
							<td><%= (user.authentications.present? ? user.authentications.first.uid : "-") %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		
		<div id="admin_apartments" class="admin grid_12">
			<h1>Apartments</h1>
			<table>
				<thead>
					<tr>
						<td>ID</td>
						<td>Address</td>
						<td>Name</td>
						<td>Phone #</td>
						<td>Distance To Campus</td>
						<td># Reviews</td>
					</tr>
				</thead>
				<tbody>
					<% @apartments.each do |apartment| %>
						<tr>
							<td><%= apartment.id %></td>
							<td><%= apartment.address %></td>
							<td><%= apartment.name %></td>
							<td><%= apartment.phone_number %></td>
							<td><%= apartment.dist_to_campus %></td>
							<td><%= apartment.reviews.length %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		
		<div id="admin_reviews" class="admin grid_12">
			<h1>Reviews</h1>
			<table>
				<thead>
					<tr>
						<td>ID</td>
						<td>By User</td>
						<td>For Apartment</td>
					</tr>
				</thead>
				<tbody>
					<% @reviews.each do |review| %>
						<tr>
							<td><%= review.id %></td>
							<td><%= "#{review.user.id} #{review.user.email}"%></td>
							<td><%= review.apartment.address %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div> <!--container 12-->
	
			
</div> <!--wrapper-->